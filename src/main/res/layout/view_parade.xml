<?xml version="1.0" encoding="utf-8"?>
<com.softwareforgood.pridefestival.ui.parade.DefaultParadeView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ProgressBar
        android:id="@+id/parade_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        />

    <com.softwareforgood.pridefestival.ui.misc.LinearRecyclerView
        android:id="@+id/parade_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        />

    <com.softwareforgood.pridefestival.ui.GenericErrorView
        android:id="@+id/parade_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</com.softwareforgood.pridefestival.ui.parade.DefaultParadeView>
